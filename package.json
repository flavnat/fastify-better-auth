{
  "name": "fastify-better-auth-starter",
  "version": "1.0.0",
  "description": "A production-ready Fastify + Better Auth starter kit with PostgreSQL and Drizzle ORM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/app.ts",
    "start": "node dist/app.js",
    "db:generate": "drizzle-kit generate --config ./src/drizzle.config.ts",
    "db:push": "drizzle-kit push --config ./src/drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio --config ./src/drizzle.config.ts"
  },
  "keywords": [
    "fastify",
    "better-auth",
    "authentication",
    "drizzle",
    "postgres",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "better-auth": "^1.4.7",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.41.0",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.13.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.10",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}